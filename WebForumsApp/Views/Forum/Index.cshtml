@model WebForumsApp.Data.Models.ViewModels.ForumIndexVM

<h1>Forums</h1>

<table class="table table-hover">
    <tbody>
        @foreach (var item in Model.ForumsList)
        {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Description
            </td>
        </tr>
        }
    </tbody>
</table>